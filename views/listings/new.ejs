<%layout("/layouts/boilerplate")%>
  <body>
    <div class="row mt-2">
      <div class="col-8 offset-2">
        <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
      <div class="mb-1">
       <label for="title" class="form-label">Title</label>
        <input name="listing[title]" id="title" class="form-control "placeholder="Add a catchy title" type="text" required/>
        <div class="valid-feedback">
          Looks good!
        </div>
        <br> <br>
      </div>
      <div class="mb-1">
        <label for="description" class="form-label">Description</label>
        <textarea id="description" name="listing[description]" class="form-control " placeholder="Enter description" required></textarea>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter a short description!</div>
      </div>
      <br> <br>
      <!-- <div class="mb-1">
        <label for="image" class="form-label" >Image link:</label>
        <input name="listing[image][url]" class="form-control" placeholder="enter image URL/Link" type="text"/>

        <br /><br />
      </div> -->
      <div class="mb-1">
        <label for="image" class="form-label" >Upload Listing Image</label>
        <input name="listing[image]" class="form-control" type="file"/>

        <br /><br />
      </div>
      <div class="row">
        <div class="mb-1 col-md-4 ">
         <label for="price" class="form-label">Price</label>
         <input name="listing[price]" class="form-control" placeholder="1200" type="text" required />
         <div class="invalid-feedback">
          Price should be valid .
         </div>
        <br /><br />
        </div>
      <div class="mb-1 col-md-8">
        <label for="country" class="form-label">Country</label>
        <input name="listing[country]" class="form-control" placeholder="India" type="text" required/>
        <div class="invalid-feedback">
          Country should be valid .
        </div>
        <br /><br />
      </div>
    </div>
      <div class="mb-1">
        <label for="location" class="form-label">Location</label>
        <input
          name="listing[location]"
          placeholder="enter location"
          type="text" class="form-control" required
        />
        <div class="invalid-feedback">
          Location should be valid .
        </div>
        <br /><br />
      </div>
      <button class="btn btn-dark add-btn mt-2">Add</button>
    </form>
  </div>
  </div>
  </body>
